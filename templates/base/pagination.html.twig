{% if pageCount > 1 %}
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center mt-4 custom-pagination">

            {% if previous is defined %}
                <li class="page-item">
                    <a class="page-link custom-link text-dark" href="{{ path(route, query|merge({'page': 1})) }}">First</a>
                </li>
                <li class="page-item">
                    <a class="page-link custom-link text-dark" href="{{ path(route, query|merge({'page': previous})) }}">Previous</a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <span class="page-link custom-link text-dark">First</span>
                </li>
                <li class="page-item disabled">
                    <span class="page-link custom-link text-dark">Previous</span>
                </li>
            {% endif %}

            {% for i in 1..pageCount %}
                {% if i != current %}
                    <li class="page-item"><a class="page-link custom-link text-dark" href="{{ path(route, query|merge({'page': i})) }}">{{ i }}</a></li>
                {% else %}
                    <li class="page-item active"><a class="page-link custom-link text-dark" href="#">{{ i }}</a></li>
                {% endif %}
            {% endfor %}

            {% if next is defined %}
                <li class="page-item">
                    <a class="page-link custom-link text-dark" href="{{ path(route, query|merge({'page': next})) }}">Next</a>
                </li>
                <li class="page-item">
                    <a class="page-link custom-link text-dark" href="{{ path(route, query|merge({'page': pageCount})) }}">Last</a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <span class="page-link custom-link text-dark">Next</span>
                </li>
                <li class="page-item disabled">
                    <span class="page-link custom-link text-dark">Last</span>
                </li>
            {% endif %}

        </ul>
    </nav>
{% endif %}
