{% extends 'baseBackResponse.html.twig' %}

{% block title %}Reponse{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <h2 class="mb-4">Reponse Details</h2>
                <div class="card shadow">
                    <div class="card-header" style="background-color: #D4EDDA;">
                        Reponse Details
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                        <th>Id</th>
                                        <td>{{ reponse.id }}</td>
                                    </tr>
                                    <tr>
                                        <th>Complaint_id</th>
                                        <td>{{ reponse.complaint.id }}</td>
                                    </tr>
                                    <tr>
                                        <th>Message</th>
                                        <td>{{ reponse.message }}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer bg-light">
                        <div class="d-flex justify-content-end">
                            <a href="{{ path('app_reponse_edit', {'id': reponse.id}) }}" class="btn btn-warning mx-2">Edit</a>
                            <a href="{{ path('app_reponse_index') }}" class="btn btn-secondary mx-2">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{ include('reponse/_delete_form.html.twig') }}
{% endblock %}
