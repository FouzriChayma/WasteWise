{# store_house/show.html.twig #}
{% extends 'baseBack.html.twig' %}

{% block title %}
    Stocks in Storehouse: {{ store_house.nameSh }}
{% endblock %}

{% block content %}
    {% block stylesheets %}
        <style>
            .table-wrapper {
                width: 80%; /* Adjust width as needed */
            }

            .back-button {
                float: right;
                margin-top: 10px; /* Adjust margin-top as needed */
                margin-bottom: 10px; /* Adjust margin-top as needed */
                margin-right: 10px; /* Adjust margin-right as needed */
            }

            .table-margin {
                margin-top: 20px; /* Adjust margin-top as needed */
            }

            .page-link {
                margin: 0 5px; /* Adjust margin as needed */
                color: green; /* Set the color to green */
            }
        </style>
    {% endblock %}

    <div class="app-wrapper">
        <div class="app-content pt-3 p-md-3 p-lg-4">

            <div class="container-xl">
                <div class="container table-container">
                    <div class="table-wrapper">
                        <div class="col-md-15">
                            <div class="card">
                                <div class="card-header" style="background-color: #D4EDDA;">
                                    <h2 class="mb-0">Stocks in Storehouse: {{ store_house.nameSh }}</h2>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>Image</th>
                                                    <th>Name</th>
                                                    <th>Quantity</th>
                                                    <th>Buying Price</th>
                                                    <th>Selling Price</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for stock in stocks %}
                                                    <tr>
                                                        <td class="cell"><img src="{{ asset(stock.getImageSt()) }}" alt="{{ stock.getNameSt() }} Image" width="100" height="100"></td>
                                                        <td class="cell">{{ stock.getNameSt() }}</td>
                                                        <td class="cell">{{ stock.getQuantitySt() }}</td>
                                                        <td class="cell">{{ stock.getBuyingPrice() }}</td>
                                                        <td class="cell">{{ stock.getSellingPrice() }}</td>
                                                    </tr>
                                                {% else %}
                                                    <tr>
                                                        <td colspan="5">No stocks found for this storehouse.</td>
                                                    </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                        <div class="container d-flex justify-content-center my-4">
                                            {% for page in 1..stocksPages %}
                                                <a href="{{ path('app_store_house_show', {'idSh': store_house.idSh, 'stocksPage': page, 'ordersPage': ordersPage}) }}" class="page-link">{{ page }}</a>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="table-wrapper table-margin">
                        <div class="col-md-15">
                            <div class="card">
                                <div class="card-header" style="background-color: #D4EDDA;">
                                    <h2 class="mb-0">Orders in {{ store_house.nameSh }}</h2>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>Order ID</th>
                                                    <th>Quantity</th>
                                                    <th>Status</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for order in orders %}
                                                    <tr>
                                                        <td>{{ order.idO }}</td>
                                                        <td>{{ order.quantityO }}</td>
                                                        <td>{{ order.statusO }}</td>
                                                    </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                        <div class="container d-flex justify-content-center my-4">
                                            {% for page in 1..ordersPages %}
                                                <a href="{{ path('app_store_house_show', {'idSh': store_house.idSh, 'stocksPage': stocksPage, 'ordersPage': page}) }}" class="page-link">{{ page }}</a>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}