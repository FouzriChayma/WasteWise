<script>
    // Assuming mostOrderedStock is an array with name_st and totalQuantity properties
    var mostOrderedStock = {{ mostOrderedStock|json_encode|raw }};

    // Extracting data for the pie chart
    var labels = mostOrderedStock.map(function(stock) {
        return stock.name_st;
    });

    var data = mostOrderedStock.map(function(stock) {
        return stock.totalQuantity;
    });

    // Create the pie chart
    var ctx = document.getElementById('chart-pie').getContext('2d');
    var myPieChart = new Chart(ctx, {
        type: 'pie',
        data: {
            labels: labels,
            datasets: [{
                data: data,
                backgroundColor: [
                    'rgba(0, 100, 0, 0.8)',    // Dark Green
                        'rgba(255, 170, 0, 0.8)',  // Darker Yellow

                    'rgba(139, 69, 19, 0.8)',  // Saddle Brown
                    'rgba(153, 102, 255, 0.8)',
                ],

            }],
        },
    });
</script>

