{% extends 'baseBack.html.twig' %}

{% block title %}Edit Order{% endblock %}

{% block content %}
<div class="app-wrapper">
    <div class="app-content pt-3 p-md-3 p-lg-4">
        <div class="container-xl">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-header" style="background-color: #D4EDDA;">
                                <br><h2 class="mb-0">Edit Order's Status</h2>
                            </div>
                            <div class="card-body">
                                <form method="post">
                                    {{ form_widget(form._token) }}

                                    <div class="mb-3">
                                        {{ form_label(form.quantityO, 'Quantity') }}
                                        {{ form_widget(form.quantityO, {'attr': {'class': 'form-control'}}) }}
                                        {% if form_errors(form.quantityO) %}
                                            <div class="error-message">{{ form_errors(form.quantityO) }}</div>
                                        {% endif %}
                                    </div>
                                    
                                    <div class="mb-3">
                                        {{ form_label(form.statusO, 'Status') }}
                                        {{ form_widget(form.statusO, {'attr': {'class': 'form-control'}}) }}
                                        {% if form_errors(form.statusO) %}
                                            <div class="error-message">{{ form_errors(form.statusO) }}</div>
                                        {% endif %}
                                    </div>

                                    <div class="mb-3">
                                        {{ form_label(form.stock, 'Stock') }}
                                        {{ form_widget(form.stock, {'attr': {'class': 'form-control'}}) }}
                                        {% if form_errors(form.stock) %}
                                            <div class="error-message">{{ form_errors(form.stock) }}</div>
                                        {% endif %}
                                    </div>
                        
                                    <button type="submit" class="btn btn-warning">Update</button>
                                    <a href="{{ path('app_our_order_index') }}" class="btn btn-secondary">Cancel</a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.error-message {
    background-color: #f8d7da;
    border: 1px solid #f5c6cb;
    color: #721c24;
    padding: 10px;
    margin-top: 5px;
    border-radius: 5px;
    font-size: 14px;
    /* Add more styles as needed */
}
</style>
{% endblock %}
