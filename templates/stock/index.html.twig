{% extends 'baseBack.html.twig' %}


{% block content %}

<div class="app-wrapper">
	    
	    <div class="app-content pt-3 p-md-3 p-lg-4">
		    <div class="container-xl">
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Stock Managment</h1>
    <a href="{{ path('app_stock_new') }}" class="btn btn-sm btn-secondary"><i class="fas fa-plus"></i> Create New</a>
</div>
<!-- Search Form -->
<form action="{{ path('app_stock_index') }}" method="GET" class="mb-3">
    <div class="input-group">
        <input type="text" name="search" class="form-control" placeholder="Search...">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>
<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead class="table-success"> <!-- Modification: changer la couleur en vert -->
            <tr>
				<th>
                    <span class="custom-checkbox">
                        <input type="checkbox" id="selectAll" class="selectAll">
                        <label for="selectAll"></label>
                    </span>
                </th>
				<th>Image</th>
				<th>Name</th>
				<th>Quantity</th>
				<th>Buying Price</th>
				<th>Selling Price</th>
				<th>Storehouse</th>
				<th>Actions</th>
										
			</tr>
        </thead>
        <tbody>
            {% for stock in stocks %}
                <tr>
                    <td>
                        <span class="custom-checkbox">
                            <input type="checkbox" id="checkbox{{ stock.idSt }}" class="selectAll">
                            <label for="checkbox{{ stock.idSt }}"></label>
                        </span>
                    </td>
                    <td style="text-align: center;">{% dump(stock.imageSt) %}<img src="{{ asset(stock.imageSt) }}" alt="Stock Image" width="50"></td>
                    <td>{{ stock.nameSt }}</td>
                    <td>{{ stock.quantitySt }}</td>
                    <td>{{ stock.buyingPrice }}</td>
                    <td>{{ stock.sellingPrice }}</td>
                    <td>{{ stock.StoreHouse }}</td>
                    <td>
                        <a href="{{ path('app_stock_show', {'idSt': stock.idSt}) }}" class="btn btn-sm btn-secondary">Show</a>
					</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="10" class="text-center">No records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
<style>
    /* Pagination styling */
    .pagination {
        display: flex;
        justify-content: center;
        list-style: none;
        padding: 0;
        border: none;
    }

    .pagination li {
        margin: 0 5px;
    }

    .pagination a {
        color: #555;
        text-decoration: none;
        padding: 5px 10px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
        border: none;
    }

    .pagination a:hover {
        background-color: #f0f0f0;
    }

    .pagination .active a {
        background-color: #D4EDDA;
        color: #fff;
    }

    .pagination .disabled a {
        pointer-events: none;
        opacity: 0.6;
    }
</style>

<!-- Pagination -->
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center mt-4 custom-pagination"> <!-- Utilisation de votre propre classe custom-pagination -->
        <li class="page-item {% if page == 1 %}disabled{% endif %}">
            <a class="page-link custom-link text-dark" href="{{ path('app_stock_index', {'page': page - 1}) }}">Previous</a>
        </li>
        {% for pageNumber in 1..total_pages %}
            <li class="page-item {% if page == pageNumber %}active{% endif %}">
                <a class="page-link custom-link text-dark" href="{{ path('app_stock_index', {'page': pageNumber}) }}">{{ pageNumber }}</a>
            </li>
        {% endfor %}
        <li class="page-item {% if page == total_pages %}disabled{% endif %}">
            <a class="page-link custom-link text-dark" href="{{ path('app_stock_index', {'page': page + 1}) }}">Next</a>
        </li>
    </ul>
</nav>

</div></div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Get the "Select All" checkbox
        const selectAllCheckbox = document.getElementById('selectAll');

        // Get all individual checkboxes
        const checkboxes = document.querySelectorAll('.selectAll');

        // Add a click event listener to the "Select All" checkbox
        selectAllCheckbox.addEventListener('click', function() {
            // Loop through all checkboxes
            checkboxes.forEach(function(checkbox) {
                // Set each checkbox's checked property to be the same as the "Select All" checkbox
                checkbox.checked = selectAllCheckbox.checked;
            });
        });
    });
</script>
{% endblock %}
