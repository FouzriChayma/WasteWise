{% extends 'baseBack.html.twig' %}

{% block title %}{{ user.name }}{% endblock %}

{% block content %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="mb-4">User Profile</h2>
            <div class="card shadow">
                <div class="card-header" style="background-color: #D4EDDA;">
                    {{ user.name }}'s Profile
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <th>ID</th>
                                    <td>{{ user.id }}</td>
                                </tr>
                                <tr>
                                    <th>Email</th>
                                    <td>{{ user.email }}</td>
                                </tr>
                                <tr>
                                    <th>Name</th>
                                    <td>{{ user.name }}</td>
                                </tr>
                                <tr>
                                    <th>Last Name</th>
                                    <td>{{ user.lastName }}</td>
                                </tr>
                                <tr>
                                    <th>Username</th>
                                    <td>{{ user.username }}</td>
                                </tr>
                                <tr>
                                    <th>Role</th>
                                    <td>{{ user.role }}</td>
                                </tr>
                                <tr>
                                    <th>Is Banned</th>
                                    <td>{{ user.isBanned ? 'Yes' : 'No' }}</td>
                                </tr>
                                <tr>
                                    <th>Is Verified</th>
                                    <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                                </tr>
                                <tr>
                                    <th>Date of Birth</th>
                                    <td>{{ user.ddn|date('M d, Y') }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer bg-light">
                    <div class="d-flex justify-content-end">
                        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary mx-2">Edit</a>
                        {{ include('user/_delete_form.html.twig') }}
                        <a href="{{ path('app_user_index') }}" class="btn btn-secondary mx-2">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
