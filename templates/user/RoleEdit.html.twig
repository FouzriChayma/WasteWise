{% extends 'baseBack.html.twig' %}

{% block title %}Edit Password{% endblock %}

{% block stylesheets %}
    <style>
        /* Style pour la barre de navigation */
        .navbar {
            background-color: #6c757d; /* Couleur grise pour la barre de navigation */
        }

        /* Style pour le formulaire */
        .card {
            background-color: #f8f9fa; /* Couleur de fond du formulaire */
            border-radius: 10px; /* Bordures arrondies */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Ombre légère */
            font-size: 20px; /* Taille de police légèrement plus grande */
            margin-top: 50px; /* Espacement du haut du formulaire */
        }

        .card-header {
            background-color: #D4EDDA; /* Couleur verte foncée pour l'en-tête du formulaire */
            color: #fff; /* Texte blanc pour l'en-tête du formulaire */
            border-radius: 15px 15px 0 0; /* Bordure arrondie uniquement en haut */
            font-size: 16px; /* Taille de police légèrement plus grande */
        }


        .card-body {
            padding: 20px; /* Espacement interne du contenu du formulaire */
        }

        /* Style pour les champs de formulaire */
        .form-label {
            color: #495057; /* Couleur du texte des étiquettes */
            font-size: 18px; /* Taille de police légèrement plus grande pour les étiquettes */
        }

        .form-control {
            background-color: #fff; /* Couleur de fond des champs de formulaire */
            border: 1px solid #ced4da; /* Bordure des champs de formulaire */
            border-radius: 5px; /* Bordures arrondies des champs de formulaire */
            font-size: 16px; /* Taille de police légèrement plus grande pour les champs */
            padding: 10px; /* Espacement interne des champs de formulaire */
        }

        .form-control:focus {
            border-color: #80bdff; /* Couleur de la bordure lorsqu'un champ de formulaire est en focus */
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25); /* Ombre légère lorsqu'un champ de formulaire est en focus */
        }

        .btn-success {
            font-size: 18px; /* Taille de police légèrement plus grande pour le bouton de succès */
            padding: 10px 20px; /* Espacement interne du bouton de succès */
            margin-top: 20px; /* Espacement du haut du bouton de succès */
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header"><strong>Give Role</strong></div>
                    <div class="card-body">
                    <form method="POST" action="{{ path('assign_role', {'id': user.id}) }}">
                                 <div class="mb-3">
                                <label for="password" class="form-label">Role</label>
                                <select  id="role" name="role" class="form-control" required>
                                <option value="Admin">Admin</option>
                                <option value="Client">Client</option>
                                 <option value="Driver">Driver</option>
                                  <option value="Supplier">Supplier</option>
                                  </select>
                            </div>
                           
                            <button type="submit" class="btn btn-success">Save</button>
                              <a href="{{ path('app_user_index') }}" class="btn btn-secondary mx-2">Back to List</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
