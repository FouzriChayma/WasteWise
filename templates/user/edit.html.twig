{% extends 'baseBack.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block stylesheets %}
    <style>
        /* Styles pour le formulaire */
        .card {
            background-color: #f8f9fa; /* Couleur de fond du formulaire */
            border-radius: 15px; /* Bordures arrondies */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Ombre légère */
            font-size: 14px; /* Taille de police réduite */
        }

        .card-header {
            background-color: #D4EDDA; /* Couleur verte foncée pour l'en-tête du formulaire */
            color: #fff; /* Texte blanc pour l'en-tête du formulaire */
            border-radius: 15px 15px 0 0; /* Bordure arrondie uniquement en haut */
            font-size: 16px; /* Taille de police légèrement plus grande */
        }

        .card-body {
            padding: 15px; /* Espacement interne du contenu du formulaire réduit */
        }

        .form-control {
            background-color: #fff; /* Couleur de fond des champs de formulaire */
            border: 1px solid #ced4da; /* Bordure des champs de formulaire */
            border-radius: 5px; /* Bordures arrondies des champs de formulaire */
            font-size: 14px; /* Taille de police réduite */
            padding: 8px; /* Espacement interne des champs de formulaire réduit */
        }

        .btn-primary {
            font-size: 14px; /* Taille de police réduite pour les boutons */
            padding: 8px 16px; /* Espacement interne des boutons réduit */
        }

        /* Style pour le champ d'image */
        .custom-file-label {
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
        }

        .custom-file-label::after {
            content: "Browse";
        }

        .custom-file-input::-webkit-file-upload-button {
            visibility: hidden;
        }

        .custom-file-input::before {
            content: 'Choose file';
            display: inline-block;
            background: linear-gradient(top, #f9f9f9, #e3e3e3);
            border: 1px solid #999;
            border-radius: 3px;
            padding: 5px 8px;
            outline: none;
            white-space: nowrap;
            -webkit-user-select: none;
            cursor: pointer;
            text-shadow: 1px 1px #fff;
            font-weight: 700;
            font-size: 10pt;
        }

        .custom-file-input:hover::before {
            border-color: black;
        }

        .custom-file-input:active::before {
            background: -webkit-linear-gradient(top, #e3e3e3, #f9f9f9);
        }
    </style>
{% endblock %}

{% block content %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">Edit User</h2>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'name': 'my-form', 'id': 'my-form'}}) }}
                    <div class="form-group">
                        {{ form_label(form.email, 'Email', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Enter your email'}}) }}
                        {{ form_errors(form.email) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.name, 'Name', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Enter your name'}}) }}
                        {{ form_errors(form.name) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.LastName, 'Last Name', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.LastName, {'attr': {'class': 'form-control', 'placeholder': 'Enter your last name'}}) }}
                        {{ form_errors(form.LastName) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.UserName, 'Username', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.UserName, {'attr': {'class': 'form-control', 'placeholder': 'Enter your username'}}) }}
                        {{ form_errors(form.UserName) }}
                    </div>
  <tr>
    <td>{{ form_label(form.ImagePath, 'Image') }}</td>
    <td class="image-field"> <!-- Ajout de la classe personnalisée image-field -->
        {{ form_widget(form.ImagePath, { 'attr': {'class': 'form-control'} }) }}
        {% if form_errors(form.ImagePath) %}
            <div class="text-danger">{{ form_errors(form.ImagePath) }}</div>
        {% endif %}
    </td>
</tr>



                    <div class="form-group">
                        {{ form_label(form.role, 'Role', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.role, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.role) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.ddn, 'Date of Birth', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.ddn, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.ddn) }}
                    </div>
                    
                    <!-- Espace entre le dernier champ et les boutons -->
                    <div style="margin-bottom: 20px;"></div>

                    <!-- Boutons -->
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
                        <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Back to List</a>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
