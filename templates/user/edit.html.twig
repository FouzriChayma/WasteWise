{% extends 'baseBack.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block stylesheets %}
    <style>
        /* Style pour la barre de navigation */
        .navbar {
            background-color:#D4EDDA; /* Couleur verte naturelle */
        }

        /* Style pour le formulaire */
        .card {
            background-color: #f8f9fa; /* Couleur de fond du formulaire */
            border-radius: 15px; /* Bordures arrondies */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Ombre légère */
            font-size: 14px; /* Taille de police réduite */
        }

        .card-header {
            background-color: #D4EDDA; /* Couleur verte foncée pour l'en-tête du formulaire */
            color: #fff; /* Texte blanc pour l'en-tête du formulaire */
            border-radius: 15px 15px 0 0; /* Bordure arrondie uniquement en haut */
            font-size: 16px; /* Taille de police légèrement plus grande */
        }

        .card-body {
            padding: 15px; /* Espacement interne du contenu du formulaire réduit */
        }

        /* Style pour les champs de formulaire */
        .form-label {
            color: #495057; /* Couleur du texte des étiquettes */
            font-size: 14px; /* Taille de police réduite */
        }

        .form-control {
            background-color: #fff; /* Couleur de fond des champs de formulaire */
            border: 1px solid #ced4da; /* Bordure des champs de formulaire */
            border-radius: 5px; /* Bordures arrondies des champs de formulaire */
            font-size: 14px; /* Taille de police réduite */
            padding: 8px; /* Espacement interne des champs de formulaire réduit */
        }

        .form-control:focus {
            border-color: #80bdff; /* Couleur de la bordure lorsqu'un champ de formulaire est en focus */
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25); /* Ombre légère lorsqu'un champ de formulaire est en focus */
        }

        .btn-primary,
        .btn-secondary {
            font-size: 14px; /* Taille de police réduite pour les boutons */
            padding: 8px 16px; /* Espacement interne des boutons réduit */
        }

        .btn-primary:hover,
        .btn-secondary:hover {
            font-size: 14px; /* Taille de police réduite pour les boutons au survol */
        }
    </style>
{% endblock %}

{% block content %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">Edit User</h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        {{ form_widget(form._token) }}
                        <div class="mb-2">
                            <label for="edit-email" class="form-label">Email</label>
                            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'id': 'edit-email'}}) }}
                        </div>
                        
                        <div class="mb-2">
                            <label for="edit-password" class="form-label">Password</label>
                            {{ form_widget(form.password, {'attr': {'class': 'form-control', 'id': 'edit-password'}}) }}
                        </div>
                        
                        <div class="mb-2">
                            <label for="edit-name" class="form-label">Name</label>
                            {{ form_widget(form.name, {'attr': {'class': 'form-control', 'id': 'edit-name'}}) }}
                        </div>
                        
                        <div class="mb-2">
                            <label for="edit-last-name" class="form-label">Last Name</label>
                            {{ form_widget(form.LastName, {'attr': {'class': 'form-control', 'id': 'edit-last-name'}}) }}
                        </div>
                        
                        <div class="mb-2">
                            <label for="edit-username" class="form-label">UserName</label>
                            {{ form_widget(form.UserName, {'attr': {'class': 'form-control', 'id': 'edit-username'}}) }}
                        </div>
                        
                        <div class="mb-2">
                            <label for="edit-role" class="form-label">Role</label>
                            {{ form_widget(form.role, {'attr': {'class': 'form-control', 'id': 'edit-role'}}) }}
                        </div>
                        
                        <div class="mb-2">
                            <label for="edit-isBanned" class="form-label">Is Banned</label>
                            {{ form_widget(form.isBanned, {'attr': {'class': 'form-check-input', 'id': 'edit-isBanned'}}) }}
                        </div>
                        
                        <div class="mb-2">
                            <label for="edit-IsVerified" class="form-label">Is Verified</label>
                            {{ form_widget(form.IsVerified, {'attr': {'class': 'form-check-input', 'id': 'edit-IsVerified'}}) }}
                        </div>
                        
                        <div class="mb-2">
                            <label for="edit-ddn" class="form-label">Birth Date</label>
                            {{ form_widget(form.ddn, {'attr': {'class': 'form-control', 'id': 'edit-ddn'}}) }}
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
                            <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
