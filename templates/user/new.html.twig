{% extends 'baseBack.html.twig' %}

{% block title %}New User{% endblock %}

{% block content %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">Create New User</h2>
                </div>
                <div class="card-body">
                    <form method="post" action="{{ path('app_user_new') }}">
                        {{ form_widget(form._token) }}
                        
                        <div class="mb-3 row">
                            <div class="col-md-6">
                                <label for="add-name" class="form-label">Name</label>
                                {{ form_widget(form.name, {'attr': {'class': 'form-control', 'id': 'add-name'}}) }}
                            </div>
                            <div class="col-md-6">
                                <label for="add-last-name" class="form-label">Last Name</label>
                                {{ form_widget(form.LastName, {'attr': {'class': 'form-control', 'id': 'add-last-name'}}) }}
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="add-username" class="form-label">Username</label>
                            {{ form_widget(form.UserName, {'attr': {'class': 'form-control', 'id': 'add-username'}}) }}
                        </div>
                        
                        <div class="mb-3">
                            <label for="add-ddn" class="form-label">Birth Date</label>
                            {{ form_widget(form.ddn, {'attr': {'class': 'form-control', 'id': 'add-ddn'}}) }}
                        </div>

                        <div class="mb-3">
                            <label for="add-email" class="form-label">Email</label>
                            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'id': 'add-email'}}) }}
                        </div>
                        

                        <div class="mb-3">
                            <label for="add-role" class="form-label">Role</label>
                            {{ form_widget(form.role, {'attr': {'class': 'form-control', 'id': 'add-role'}}) }}
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
