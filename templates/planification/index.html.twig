{% extends 'baseBack.html.twig' %}


{% block content %}
<!-- Add this in the head section of your HTML file -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>


<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">planification Managment</h1>
    <a href="{{ path('app_planification_new') }}" class="btn btn-sm btn-secondary"><i class="fas fa-plus"></i> Create New</a>
</div>

<div class="row mb-3">
    <div class="col-md-4">
        <form action="{{ path('app_planification_index') }}" method="GET" class="input-group">
            <input type="text" name="search" class="form-control" placeholder="Search...">
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
    </div>

   <div class="col-md-8">
    <form action="{{ path('app_planification_index') }}" method="GET" class="input-group">
       <div class="row g-2 align-items-center">
                <div class="col-md-3">Sort By:</div>
                <div class="col-md-7">
                <select name="sortField" class="form-select">
                    {% for optionKey, optionLabel in sortOptions %}
                        <option value="{{ optionKey }}" {% if optionKey == currentSortField %}selected{% endif %}>{{ optionLabel }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-md-1">
                <!-- Ascending Icon -->
                <button type="submit" name="sortOrder" value="asc" class="btn btn-outline-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-caret-up-square" viewBox="0 0 16 16">
                        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z"/>
                        <path d="M3.544 10.705A.5.5 0 0 0 4 11h8a.5.5 0 0 0 .374-.832l-4-4.5a.5.5 0 0 0-.748 0l-4 4.5a.5.5 0 0 0-.082.537"/>
                    </svg>
                </button>
            </div>
            <div class="col-md-1">
                <!-- Descending Icon -->
                <button type="submit" name="sortOrder" value="desc" class="btn btn-outline-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-caret-down-square" viewBox="0 0 16 16">
                        <path d="M3.626 6.832A.5.5 0 0 1 4 6h8a.5.5 0 0 1 .374.832l-4 4.5a.5.5 0 0 1-.748 0z"/>
                        <path d="M0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm15 0a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1z"/>
                    </svg>
                </button>
            </div>
        </div>
    </form>
   </div>
<div class="d-flex justify-content-end">
        <a class="btn app-btn-secondary" href="{{ path('pdf_plan') }}">
            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-download me-1" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z"/>
                <path fill-rule="evenodd" d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3z"/>
            </svg>
            Export PDF
        </a>
    </div>
</div>


<div class="table-responsive">
    <table class="table app-table-hover mb-0 text-left">
        <thead>
            <tr>
                <th>
                    <span class="custom-checkbox">
                        <input type="checkbox" id="selectAll" class="selectAll">
                        <label for="selectAll"></label>
                    </span>
                </th>
                <th class="cell">driver name</th>
                <th class="cell">Date</th>
                <th class="cell">Location</th>
                <th class="cell">Id mission</th>
                <th class="cell">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for planification in planifications %}
            <tr>
			 <td>
                        <span class="custom-checkbox">
                            <input type="checkbox" id="checkbox{{ planification.idPlan }}" class="selectAll">
                            <label for="checkbox{{ planification.idPlan }}"></label>
                        </span>
                    </td>
                <td>{{ planification.idDriver }}</td>
                <td>{{ planification.date ? planification.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ planification.location }}</td>
                <td>{{ planification.getMission() }}</td>
                <td>
                    
                    <a href="{{ path('app_planification_edit', {'id_plan': planification.getIdPlan()}) }}" class="badge bg-warning">Edit</a>
                     <a href="{{ path('app_planification_delete', {'id_plan': planification.getIdPlan()}) }}" onclick="return confirm('Are you sure you want to delete this item?');" class="badge bg-danger">Delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
<style>
    /* Pagination styling */
    .pagination {
        display: flex;
        justify-content: center;
        list-style: none;
        padding: 0;
        border: none;
    }

    .pagination li {
        margin: 0 5px;
    }

    .pagination a {
        color: #555;
        text-decoration: none;
        padding: 5px 10px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
        border: none;
    }

    .pagination a:hover {
        background-color: #f0f0f0;
    }

    .pagination .active a {
        background-color: #D4EDDA;
        color: #fff;
    }

    .pagination .disabled a {
        pointer-events: none;
        opacity: 0.6;
    }
</style>

<!-- Pagination -->
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center mt-4 custom-pagination"> <!-- Utilisation de votre propre classe custom-pagination -->
        <li class="page-item {% if page == 1 %}disabled{% endif %}">
            <a class="page-link custom-link text-dark" href="{{ path('app_planification_index', {'page': page - 1}) }}">Previous</a>
        </li>
        {% for pageNumber in 1..total_pages %}
            <li class="page-item {% if page == pageNumber %}active{% endif %}">
                <a class="page-link custom-link text-dark" href="{{ path('app_planification_index', {'page': pageNumber}) }}">{{ pageNumber }}</a>
            </li>
        {% endfor %}
        <li class="page-item {% if page == total_pages %}disabled{% endif %}">
            <a class="page-link custom-link text-dark" href="{{ path('app_planification_index', {'page': page + 1}) }}">Next</a>
        </li>
    </ul>
</nav>


<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Get the "Select All" checkbox
        const selectAllCheckbox = document.getElementById('selectAll');

        // Get all individual checkboxes
        const checkboxes = document.querySelectorAll('.selectAll');

        // Add a click event listener to the "Select All" checkbox
        selectAllCheckbox.addEventListener('click', function() {
            // Loop through all checkboxes
            checkboxes.forEach(function(checkbox) {
                // Set each checkbox's checked property to be the same as the "Select All" checkbox
                checkbox.checked = selectAllCheckbox.checked;
            });
        });
    });
</script>
<canvas id="PlanChart" width="400" height="200"></canvas>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctx = document.getElementById('PlanChart').getContext('2d');
        var data = {
            labels: {{ labels|raw }},
            datasets: [{
                label: 'Location',
                data: {{ data|raw }},
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                borderColor: 'rgba(75, 192, 192, 1)',
                borderWidth: 1
            }]
        };

        var myBarChart = new Chart(ctx, {
            type: 'bar',
            data: data,
        });
    </script>
{% endblock %}