{% extends 'reponse/baseBack.html.twig' %}

{% block title %}{{ complaint.title }}{% endblock %}

{% block content %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="mb-4">Complaint Details</h2>
            <div class="card shadow">
                <div class="card-header" style="background-color: #D4EDDA;">
                    Complaint #{{ complaint.id }} Details
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ complaint.id }}</td>
                                </tr>
                                {# <tr>
                                    <th>User_id</th>
                                    <td>{{ complaint.user }}</td>
                                </tr>
                                <tr> #}
                                    <th>Type of Waste</th>
                                    <td>{{ complaint.title }}</td>
                                </tr>
                                <tr>
                                    <th>Description</th>
<td style="max-width:200px; word-wrap:break-word;">{{ complaint.description }}</td>
                                </tr>
                                <tr>
                                    <th>Location</th>
                                    <td>{{ complaint.location }}</td>
                                </tr>
                                <tr>
                                    <th>SubmissionDate</th>
                                    <td>{{ complaint.submissionDate ? complaint.submissionDate|date('M d, Y') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Status</th>
                                    <td>{{ complaint.status }}</td>
                                </tr>
                            </tbody>
                        </table>
                      <div class="mt-4">
                            <h5>Picture</h5>
                            <img src="{{ asset(complaint.picture) }}" alt="Complaint picture" style="max-width: 100%;">
                        </div>
                        <div class="mt-4">
    <h5>Response</h5>
    <p>{{ complaint.reponse ? complaint.reponse.message : 'No response yet' }}</p>
</div>
                <div class="card-footer bg-light">
                    <div class="d-flex justify-content-end">
                        <a href="{{ path('app_complaint_edit', {'id': complaint.id}) }}" class="btn btn-warning mx-2">Edit</a>
                        {{ include('complaint/_delete_form.html.twig') }}
                        <a href="{{ path('complaints_by_user') }}" class="btn btn-secondary mx-2">Back to List</a>
                    </div>
                    
                </div>
        </div>
    </div>
</div>
{% endblock %}