{# templates/registration/register.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Sign up to WasteWise{% endblock %}

{% block body %}
    <div class="row g-0 app-auth-wrapper">
        <div class="col-12 col-md-7 col-lg-6 auth-main-col text-center p-5">
            <div class="d-flex flex-column align-content-end">
                <div class="app-auth-body mx-auto"> 
                    <div class="app-auth-branding mb-4" style="font-size: 15px;">
                        <a class="app-logo" href="index.html">
                            <img class="logo-icon me-2" src="{{ asset('Back/assets/images/logo (1).png') }}" alt="logo" style="width: 100px; height: auto;">
                        </a>
                    </div>
                    <h2 class="auth-heading text-center mb-4" style="color: black; font-size: 30px;">Sign up to WasteWise</h2> 

                    {% for flash_error in app.flashes('verify_email_error') %}
                        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                    {% endfor %}

                    <div class="auth-form-container text-start mx-auto">
                        {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation', 'style': 'background: rgba(255, 255, 255, 0.8);'}}) }}
                            <div class="error-message">
                                {{ form_errors(registrationForm) }}
                            </div>
                            {{ form_row(registrationForm.name, {'attr': {'class': 'form-control', 'placeholder': 'Name'}}) }}
                            {{ form_row(registrationForm.LastName, {'attr': {'class': 'form-control', 'placeholder': 'Last Name'}}) }}
                            {{ form_row(registrationForm.UserName, {'attr': {'class': 'form-control', 'placeholder': 'Username'}}) }}
                            {{ form_row(registrationForm.ddn, {'attr': {'class': 'form-control signup-name', 'placeholder': 'Date of Birth'}}) }}
                            {{ form_row(registrationForm.email, {'attr': {'class': 'form-control signup-name', 'placeholder': 'Email'}}) }}
                            {{ form_row(registrationForm.password, {'attr': {'class': 'form-control signup-name', 'placeholder': 'Password'}}) }}
                            {{ form_row(registrationForm.ImagePath, {'attr': {'class': 'form-control signup-name', 'placeholder': 'Image Path'}}) }}
                            {{ form_row(registrationForm.role, {'attr': {'class': 'form-control signup-name', 'placeholder': 'Role'}}) }}
                            {{ form_row(registrationForm.agreeTerms, {'label': 'Agree to terms', 'label_attr': {'style': 'margin-bottom: 20px;'}, 'attr': {'class': 'green-input'}}) }}

                            <button type="submit" class="btn app-btn-primary w-100 theme-btn mx-auto">Register</button>
                        {{ form_end(registrationForm) }}
                        
                        <div class="auth-option text-center pt-5">Already have an account? <a class="text-link" href="{{ path('app_login') }}">Log in</a></div>
                    </div><!--//auth-form-container-->  
                </div><!--//auth-body-->
            
                <footer class="app-auth-footer">
                </footer><!--//app-auth-footer-->   
            </div><!--//flex-column-->   
        </div><!--//auth-main-col-->
        <div class="col-12 col-md-5 col-lg-6 h-100 auth-background-col" style="background-image: url('{{ asset('Back/assets/images/signup.jpg') }}'); background-size: cover;">
            <div class="auth-background-mask"></div>
        </div><!--//auth-background-col-->
    </div><!--//row-->
{% endblock %}
