<style>


    @font-face {
  font-family: 'Roboto', sans-serif; /* Web-safe font */
  src: local('Roboto'), url('path/to/Roboto.woff2') format('woff2'); /* Add fallback */
}

html, body {
  font-family: 'Roboto', sans-serif;
  margin: 0; /* Remove default margins */
}

h1 {
  text-align: center;
  padding: 20px 0;
  font-size: 22px;
  font-weight: bold;
  color: #333;
}

table {
  width: 100%;
  border-collapse: collapse;
  page-break-inside: avoid; /* Keep entire table on one page */
}

th, td {
  border: 1px solid #ddd;
  padding: 8px;
  text-align: left;
}

th {
  background-color: #f2f2f2;
}

tr:nth-child(even) {
  background-color: #f9f9f9;
}

.actions {
  text-align: center;
}

.badge {
  display: inline-block; /* Avoid horizontal spacing issues */
  background-color: #f0f0f0; /* Neutral background */
  color: #333;
  border: 1px solid #ccc;
  padding: 5px 10px;
  border-radius: 3px;
  margin-right: 5px;
  text-decoration: none; /* Remove underline, as CSS may not apply consistently */
}

.badge:hover {
  background-color: #ddd;
}

/* Optional table headers/footers styling */
table thead, table tfoot {
  background-color: #f2f2f2;
  font-weight: bold;
}

/* Adjust header/footer content as needed */
table thead tr th:first-child, table tfoot tr th:first-child {
  text-align: left;
}
</style>

<h1>List of Donations</h1>
<body>
<div class="table-responsive">
    <table class="table app-table-hover mb-0 text-left">
        <thead>
            <tr>
                <th class="cell">ID</th>
                <th class="cell">Quantity (kg)</th>
                <th class="cell">Description</th>
                <th class="cell">Association</th>
                <th class="cell">CreatedAt</th>
                <th class="cell">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for donation in donations %}
                <tr>
                    <td>{{ donation.id }}</td>
                    <td>{{ donation.quantity }}</td>
                    <td>{{ donation.Description }}</td>
                    <td>{{ donation.association }}</td>
                    <td>{{ donation.createdAt ? donation.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td class="actions">
                        <a href="{{ path('app_donation_edit', {'id': donation.id}) }}" class="badge bg-warning">Edit</a>
                        <a href="{{ path('app_donation_delete', {'id': donation.id}) }}" onclick="return confirm('Are you sure you want to delete this item?');" class="badge bg-danger">Delete</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" style="text-align: center;">No records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
</body>
